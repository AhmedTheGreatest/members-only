<h1>Posts</h1>

<ul id="posts">
  <% @posts.each do |post| %>
    <li class="post">
      <div class="title"><%= post.title %></div>
      <% if user_signed_in? %>
        <div class="author">By <%= post.user.username %></div>
      <% end %>
      <br>
    </li>
  <% end %>
</ul>

<%= link_to "New post", new_post_path %>
